@using MusicShop.Domain.Entity
@model List<Product>

@{
    ViewData["Title"] = "Keyboards";
}

<div class="card text-black" style="border-radius : 25px; height: contain; padding: 50px;">
    <h1>Keyboards</h1>
    @if (Model.Count != 0)
    {
        <div class="card text-black" style="border-radius : 25px; height: contain; padding: 50px;">
            <div class="container">
                @{
                    foreach (Product product in Model)
                    {
                        <div class="row">
                            <div class="col-md-6 col-sm-12">
                                <img class="img-fluid" src="data:image/jpeg;base64,@Convert.ToBase64String(product.Image)"/>
                            </div>
                            <div class="col-md-6 col-sm-12">
                                <h2>@product.Manufacturer</h2>
                                <p>@product.Model</p>
                                <h3>Price: @product.Price $</h3>
                                <a asp-controller="Products" asp-action="Product" asp-route-id="@product.Id" class="btn btn-primary btn-lg;" style="width: 100%;">See more</a>
                                <form asp-controller="Order" asp-action="CreateOrder" asp-route-id="@product.Id">
                                    <button class="btn btn-primary btn-lg;" type="submit" style="width: 100%; margin-top: 15px;">Add to cart</button>
                                </form>
                            </div>
                        </div>
                        <hr />
                    }
                }
            </div>
        </div>
    }
    else
    {
        <h2>Sorry, there are no products in this category at the moment!</h2>
    }
</div>


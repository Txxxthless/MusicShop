@using MusicShop.Domain.Entity
@model dynamic

@{
    ViewData["Title"] = "Product";
}

<div class="card text-black" style="border-radius : 25px; height: contain; padding: 50px;">
    <h1>Product</h1>
    <div class="card text-black" style="border-radius : 25px; height: contain; padding: 50px;">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-sm-12">
                    <img class="img-fluid" src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Product.Image)"/>
                </div>
                <div class="col-md-6 col-sm-12">
                    <h2>@Model.Product.Manufacturer</h2>
                    <hr />
                    <p>@Model.Product.Model</p>
                    <p>Description: @Model.Product.Description</p>
                    <p>Instrument type: @Model.Product.Type</p>
                    <h3>Price: @Model.Product.Price $</h3>
                    <hr />
                    <form asp-controller="Order" asp-action="CreateOrder" asp-route-id="@Model.Product.Id">
                        <button class="btn btn-primary btn-lg;" type="submit" style="width: 100%; margin-top: 15px;">Add to cart</button>
                    </form>
                    <hr/>
                    <h2>Comments</h2>
                    <a class="btn btn-primary btn-lg;" asp-controller="Comment" asp-action="AddComment" asp-route-id="@Model.Product.Id" style="width: 100%; margin-top: 15px; margin-bottom: 15px;">Leave comment</a>
                    @if (Model.Comments != null)
                    {
                        @foreach (Comment comment in Model.Comments)
                        {
                            <h3>@comment.UserName</h3>
                            <p>@comment.Text</p>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>


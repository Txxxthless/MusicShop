@using MusicShop.Domain.Entity
@model Product

@{
    ViewData["Title"] = "Product";
}

<div class="card text-black" style="border-radius : 25px; height: contain; padding: 50px;">
    <h1>Product</h1>
    <div class="card text-black" style="border-radius : 25px; height: contain; padding: 50px;">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-sm-12">
                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Image)" style="width: 400px; height: 400px;"/>
                </div>
                <div class="col-md-6 col-sm-12">
                    <h2>@Model.Manufacturer</h2>
                    <hr />
                    <p>@Model.Model</p>
                    <p>Description: @Model.Description</p>
                    <p>Instrument type: @Model.Type</p>
                    <hr />
                    <a asp-controller="Basket" asp-action="AddItem" asp-route-id="@Model.Id" class="btn btn-primary btn-lg;">Add to basket</a>
                </div>
            </div>
        </div>
    </div>
</div>

